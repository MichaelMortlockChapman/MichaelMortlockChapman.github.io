{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["**.test.js"],
    "rules": {
        "react/react-in-jsx-scope": 0,
        "indent": ["error", 2],
        "no-trailing-spaces": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
